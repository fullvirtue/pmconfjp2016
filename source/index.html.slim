section.section
  .container
    h2.section_title SPEAKERS
    .speakers
      .speakers_list
        - data.speakers.keynotes.each do |keynotes|
          .speakers_list_item
            = image_tag keynotes.profile_image_url, class: 'speakers_list_image'
            .speakers_list_name = keynotes.name
            .speakers_list_organization = keynotes.organization
            .speakers_list_title = keynotes.title
        - data.speakers.specials.each do |specials|
