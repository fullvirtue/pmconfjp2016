            = image_tag specials.profile_image_url, class: 'speakers_list_image'
            .speakers_list_name = specials.name
            .speakers_list_organization = specials.organization
            .speakers_list_title = specials.title
        - data.speakers.staffs.each do |staffs|
          .speakers_list_item
            = image_tag staffs.profile_image_url, class: 'speakers_list_image'
            .speakers_list_name = staffs.name
            .speakers_list_organization = staffs.organization
            .speakers_list_title = staffs.title
        - data.speakers.sponsors.each do |sponsors|
          .speakers_list_item
            = image_tag sponsors.profile_image_url, class: 'speakers_list_image'
            .speakers_list_name = sponsors.name
            .speakers_list_organization = sponsors.organization
            .speakers_list_title = sponsors.title
        - data.speakers.others.each do |others|
          .speakers_list_item
            = image_tag others.profile_image_url, class: 'speakers_list_image'
            .speakers_list_name = others.name
            .speakers_list_organization = others.organization
            .speakers_list_title = others.title
      .speakers_schedulelink
        = link_to '/schedule', class: 'btn' do
          i.fa.fa-arrow-circle-right
          | &nbsp;
          | タイムテーブルを確認する


